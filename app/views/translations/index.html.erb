<h1>Listing translations</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Ans1</th>
    <th>Ans2</th>
    <th>Ans3</th>
    <th>Ans4</th>
    <th>Correctans</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @translations.each do |translation| %>
  <tr>
    <td><%= translation.question %></td>
    <td><%= translation.ans1 %></td>
    <td><%= translation.ans2 %></td>
    <td><%= translation.ans3 %></td>
    <td><%= translation.ans4 %></td>
    <td><%= translation.correctAns %></td>
    <td><%= link_to 'Show', translation %></td>
    <td><%= link_to 'Edit', edit_translation_path(translation) %></td>
    <td><%= link_to 'Destroy', translation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

